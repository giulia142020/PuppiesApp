<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_loginereg"
    android:layout_height="match_parent"
    tools:context=".Cadastro">

    <ImageButton
        android:id="@+id/btn_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/voltar"
        android:background="@null"

        android:onClick="Voltar"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puppies"
        android:textSize="50dp"
        android:fontFamily="@font/playlist"
        android:textColor="#0F6EA7"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADOÇÃO DE ANIMAIS ONLINE"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro"
        android:textAlignment="center"
        android:fontFamily="@font/comfortaa"
        android:textSize="22dp"
        android:paddingTop="40dp"
        android:paddingBottom="30dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="30dp"
        app:cardElevation="3dp"
        android:layout_gravity="center_horizontal|center_vertical"
        app:contentPadding="5dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txt_usuarioc"
                android:layout_width="242dp"
                android:layout_height="45dp"
                android:textColor="@android:color/black"
                android:hint="Usuário"
                android:textSize="14sp"
                android:paddingStart="15sp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:inputType="text"
                android:background="@drawable/retangle"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_emailc"
                android:layout_width="242dp"
                android:layout_height="45dp"
                android:textColor="@android:color/black"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:paddingStart="15sp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"

                android:background="@drawable/retangle"
                />
            <com.santalu.maskedittext.MaskEditText
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_phonec"
                android:layout_width="242dp"
                android:layout_height="45dp"
                android:textColor="@android:color/black"
                android:hint="(XX) XXXXX-XXXX"
                android:inputType="phone"
                android:textSize="14sp"
                android:paddingStart="15sp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                app:met_mask="(##) #####-####"
                android:background="@drawable/retangle"
                />
            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_tipodeuserc"
                android:layout_width="242dp"
                android:layout_height="45dp"
                android:textColor="@android:color/black"
                android:hint="Descrição.Ex:(Ong,projeto social)"
                android:inputType="text"
                android:textSize="14sp"
                android:paddingStart="15sp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"

                android:background="@drawable/retangle"
                />


            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_senhac"
                android:layout_width="242dp"
                android:layout_height="45dp"
                android:textColor="@android:color/black"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:paddingStart="15sp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"

                android:background="@drawable/retangle"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_Cadastrar"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp"
       android:layout_gravity="center_horizontal"
        android:background="@drawable/button3"


            android:text="Confirmar"
        android:textColor="@android:color/white"

        />





</LinearLayout>
</ScrollView>